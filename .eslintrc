{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react",
    "airbnb-base/legacy"
  ],
  "settings": {
    "ecmascript": 6
  },
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false,
    "deviceapis" : false
  },
  "rules": {
    "jsx-quotes"                   : [2, "prefer-double"],
    "max-len"                      : [2, 120, 2],
    "space-before-function-paren"  : "off",
    "func-names": 0,
    "no-param-reassign": 0,
    "no-underscore-dangle": 0,
    "class-methods-use-this": 0,
    "global-require": 0,
    "consistent-return": 0,
    "array-callback-return": 0,
    "no-plusplus": 0,
    "new-cap": 0,
    "no-restricted-syntax": 0
  }
}
